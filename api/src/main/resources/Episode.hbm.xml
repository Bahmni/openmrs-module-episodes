<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.module.episodes">

    <class name="org.openmrs.module.episodes.Episode" table="episode">

        <id name="episodeId" type="java.lang.Integer" column="episode_id">
            <generator class="native">
                <param name="sequence">episode_id</param>
            </generator>
        </id>

        <property name="uuid" type="java.lang.String"
                  column="uuid" length="38" unique="true" />

        <property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />
        <property name="voided" type="java.lang.Boolean" column="voided" length="1" not-null="true" />
        <property name="dateVoided" type="java.util.Date" column="date_voided" length="19" />
        <property name="voidReason" type="java.lang.String" column="void_reason" length="255" />
        <many-to-one name="voidedBy" class="org.openmrs.User" column="voided_by" />
        <property name="dateChanged" type="java.util.Date" column="date_changed" length="19" />

        <!-- bi-directional many-to-one association to User -->
        <many-to-one name="creator" class="org.openmrs.User" not-null="true">
            <column name="creator" />
        </many-to-one>

        <!-- bi-directional many-to-one association to User -->
        <many-to-one name="changedBy" class="org.openmrs.User">
            <column name="changed_by" />
        </many-to-one>

        <set name="encounters" cascade="save-update" table="episode_encounter">
            <key column="episode_id"/>
            <many-to-many column="encounter_id" class="org.openmrs.Encounter"/>
        </set>

        <set name="patientPrograms" cascade="save-update" table="episode_patient_program">
            <key column="episode_id"/>
            <many-to-many column="patient_program_id" class="org.openmrs.PatientProgram"/>
        </set>

        <many-to-one name="patient" column="patient_id" class="org.openmrs.Patient" not-null="false" />

        <property name="status" column="status" length="50" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.openmrs.module.episodes.Episode$Status</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <property name="dateStarted" type="java.util.Date" column="date_started" not-null="false" length="19" />
        <property name="dateEnded" type="java.util.Date" column="date_ended" not-null="false" length="19" />

        <set name="episodeReason" cascade="all-delete-orphan" table="episode_reason">
            <key column="episode_id"/>
            <one-to-many class="org.openmrs.module.episodes.EpisodeReason"/>
        </set>

        <set name="attributes" lazy="true" inverse="true" batch-size="100" cascade="all-delete-orphan" order-by="voided asc">
            <key column="episode_id" />
            <one-to-many class="org.openmrs.module.episodes.EpisodeAttribute" />
        </set>

        <many-to-one name="concept"  column="concept_id" class="org.openmrs.Concept" not-null="false"/>
        <many-to-one name="location"  column="location_id" class="org.openmrs.Location" not-null="false"/>
    </class>
</hibernate-mapping>
